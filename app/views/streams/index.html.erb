<p id="notice"><%= notice %></p>

<h1 class="heading">Streams</h1>

<% @grouped_streams.each do |hash_elements|%>
  <h3 class="heading"> <%= hash_elements.first %> </h3>
<table class="table table-striped table-bordered table-hover">
  <thead class="table-dark">
    <tr>
      <th>Competition</th>
      <th>Home team</th>
      <th>Away team</th>
      <th>Date</th>
      <th>Tip time</th>
      <th>Stream link</th>
      <th>Live stats link</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% hash_elements.last.each do |stream| %>
      <tr>
        <td><%= stream.game.competition.name %></td>
        <td><%= stream.game.home_club.name %></td>
        <td><%= stream.game.away_club.name %></td>
        <td><%= stream.game.date.strftime("%d/%m/%Y") %></td>
        <td><%= stream.game.formatted_tip_time %></td>
        <td><%= link_to image_tag("emojis/tv.png"), stream.stream_url, target: "_blank" %></td>
        <td><%= link_to image_tag("emojis/bar-chart.png"), stream.game.live_stats_url, target: "_blank" %></td>
        <td><%= link_to 'Show', stream %></td>
        <td><%= link_to 'Edit', edit_stream_path(stream) %></td>
        <td><%= link_to 'Destroy', stream, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>
<br>

<%= link_to 'New Stream', new_stream_path, class:"btn btn-secondary" %>
