<p id="notice"><%= notice %></p>

<h1 class="heading">Upcoming British basketball live streams</h1>
</br>
<center>
<% @grouped_games.each do |hash_elements|%>
  <h3 class="heading"> <%= hash_elements.first %> </h3>
  <table class="table table-striped table-bordered table-hover table-fit">
    <thead class="table-dark">
    <tr>
      <th>Competition</th>
      <th>Tip time</th>
      <th>Game</th>
    </tr>
    </thead>

    <tbody>
    <% hash_elements.last.each do |game| %>
      <tr>
        <td><center><div class="competition-logo"><%= link_to image_tag(game.competition.logo, :size => "30x30"), competition_path(game.competition) %></div></center></td>
        <td><center><%= game.tip_time.strftime("%H:%M") %></center></td>
        <td><div style="white-space: nowrap;" class="game-link-with-logos"><%= link_to image_tag(game.home_club.logo, :size => "30x30"), game.home_club %>  <%= link_to "#{game.home_club.name} vs #{game.away_club.name}", game_path(game) %>  <%= link_to image_tag(game.away_club.logo, :size => "30x30"), game.away_club  %></div></td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% end %>
</center>
<br>

<%= link_to 'Submit Your Live Stream', new_game_path, class:"btn btn-warning" %>
<br>
<br>
<div class="card-footer text-muted">Made with ❤️ by the <a href="https://hoopsfixfoundation.org" target="_blank">Hoopsfix Foundation</a>
</div>
