<header>
<nav class="navbar">
    <%= link_to image_tag("hoopsfix-live-logo.png"), root_path, class:"navbar-brand" %>
      <ul class="navbar-nav">
        <%= link_to 'Competitions', competitions_path, class:"nav-link" %>
        <%= link_to 'clubs', clubs_path, class:"nav-link" %>
        <%= link_to 'Archive', archive_path, class:"nav-link" %>
        <%= link_to 'Submit Your Live Stream', new_game_path, class:"btn btn-warning submit-btn" %>
      </ul>
      <div class="responsive-controls">
        <%= link_to 'Submit Your Live Stream', new_game_path, class:"btn btn-warning submit-btn" %>
        <div class="toggle" id="toggle">
            <span class="bar"></span>
            <span class="bar"></span>
            <span class="bar"></span>
        </div>
      </div>
</nav>

<script>
  let toggle = document.getElementById('toggle')
  toggle.addEventListener('click', (e) => {
    document.querySelector('.navbar-nav').classList.toggle('show')
    toggle.classList.toggle('active')
  })
</script>
</header>