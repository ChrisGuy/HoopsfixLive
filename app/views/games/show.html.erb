<% set_meta_tags title: "#{@game.home_club.name+' vs '+ @game.away_club.name}", description: "#{@game.home_club.name+' vs '+ @game.away_club.name+' live stream from the '+ @game.competition.name}" %>

<h1 class="heading"><%= title "#{@game.home_club.name+' vs '+ @game.away_club.name}" %></h1>
<h2 class="heading">Live Stream</h2>

<iframe width="100%" height="500" src="https://www.youtube.com/embed/<%= YouTubeAddy.extract_video_id(@game.stream_url) %>" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>


<div class="game-show">
  <div class="game-show-body">
    <div class="game-show-home-team"><div class="game-show-team-name">  <%= link_to @game.home_club.name, @game.home_club %>
    </div><div class="game-show-team-logo"><%= link_to image_tag(@game.home_club.logo), @game.home_club %></div></div>
    <div class="game-show-comp"><div class="game-show-date">  <%= @game.date.strftime("%d/%m/%Y") %>
    </div><div class="game-show-comp-logo"><%= link_to image_tag(@game.competition.logo), @game.competition %></div><div class="game-show-time">  <%= @game.formatted_tip_time  %>
    </div></div>
    <div class="game-show-away-team"><div class="game-show-team-logo"><%= link_to image_tag(@game.away_club.logo), @game.away_club %></div><div class="game-show-team-name"><%= link_to @game.away_club.name, @game.away_club %></div></div>
  </div>
  <div class="game-show-controls">
    <% if current_user && current_user.admin %>
    <%= link_to 'Edit', edit_game_path(@game) %> |
    <%= link_to 'Destroy', @game, method: :delete, data: { confirm: 'Are you sure?' } %> |
    <%= link_to 'Back', root_path %>
  <% end %></div>
</div>
