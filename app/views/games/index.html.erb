<p id="notice"><%= notice %></p>

<h1 class="heading">Games</h1>
<% @grouped_games.each do |hash_elements|%>
  <h3 class="heading"> <%= hash_elements.first %> </h3>
<table class="table table-striped table-bordered table-hover">
  <thead class="table-dark">
  <tr>
    <th>Competition</th>
    <th>Home team</th>
    <th>Away team</th>
    <th>Date</th>
    <th>Tip time</th>
    <th>Stream link</th>
    <th>Live stats link</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% hash_elements.last.each do |game| %>
    <tr>
      <td><%= game.competition.name %></td>
      <td><%= game.home_club.name %></td>
      <td><%= game.away_club.name %></td>
      <td><%= game.date.strftime("%d/%m/%Y") %></td>
      <td><%= game.formatted_tip_time %></td>
      <td><%= link_to image_tag("emojis/tv.png"), game.stream_url, target: "_blank" %></td></td>
      <td><%= link_to image_tag("emojis/bar-chart.png"), game.live_stat_url, target: "_blank" %></td>
      <td><%= link_to 'Show', game %></td>
      <td><%= link_to 'Edit', edit_game_path(game) %></td>
      <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<% end %>
<br>

<%= link_to 'New Game', new_game_path %>
