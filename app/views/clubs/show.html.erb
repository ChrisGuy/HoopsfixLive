<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @club.name %>
</p>


<% if @club.logo.attached? %>
  <p>
  <%= image_tag @club.logo, :size => "200x200" %>
</p>
<% end %>

<p>
  <strong>Website:</strong>
  <%= link_to @club.website, @club.website, target: "_blank" %>
</p>

<p>
  <strong>YouTube:</strong>
  <%= link_to @club.youtube, @club.youtube, target: "_blank" %>
</p>

<p>
  <strong>Facebook:</strong>
  <%= link_to @club.facebook, @club.facebook, target: "_blank" %>
</p>

<p>
  <strong>Twitter:</strong>
  <%= link_to @club.twitter, @club.twitter, target: "_blank" %>
</p>

<p>
  <strong>Instagram:</strong>
  <%= link_to @club.instagram, @club.instagram, target: "_blank" %>
</p>

<p>
  <strong>Tiktok:</strong>
  <%= link_to @club.tiktok, @club.tiktok, target: "_blank" %>
</p>

<%= link_to 'Edit', edit_club_path(@club) %> |
<%= link_to 'Back', clubs_path %>

<p id="notice"><%= notice %></p>

<h1 class="heading">Upcoming <%=@club.name%> live streams</h1>
</br>
<% @grouped_games.each do |hash_elements|%>
  <h3 class="heading"> <%= hash_elements.first %> </h3>
  <table class="table table-striped table-bordered table-hover">
    <thead class="table-dark">
    <tr>
      <th>Tip time</th>
      <th>Home team</th>
      <th>Away team</th>
      <th>Competition</th>
      <th>Live stats</th>
      <th>Stream</th>
      <th colspan="1"></th>
    </tr>
    </thead>

    <tbody>
    <% hash_elements.last.each do |game| %>
      <tr>
        <td><%= game.tip_time.strftime("%H:%M") %></td>
        <td><%= link_to game.home_club.name, club_path(game.home_club) %></td>
        <td><%= link_to game.away_club.name, club_path(game.away_club) %></td>
        <td><%= link_to game.competition.name, competition_path(game.competition) %></td>
        <td><%= link_to image_tag("emojis/bar-chart.png"), game.live_stats_url, target: "_blank" %></td>
        <td><%= link_to image_tag("emojis/tv.png"), game.stream_url, target: "_blank" %></td>
        <td><%= link_to 'Show', game %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <br />
<% end %>
